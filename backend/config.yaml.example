# Alert Center Configuration Example
# Copy this file to config.yaml and modify the values

# Application
app:
  host: "0.0.0.0"
  port: 8080
  mode: "debug"  # debug, release, test

# Database Configuration
database:
  host: "localhost"
  port: 5432
  username: "postgres"
  password: "postgres"
  name: "alert_center"
  sslmode: "disable"
  max_open_conns: 25
  max_idle_conns: 5
  conn_max_lifetime: 300

# Redis Configuration (optional)
redis:
  host: "localhost"
  port: 6379
  password: ""
  db: 0
  pool_size: 10

# JWT Authentication
jwt:
  secret: "change-this-secret-in-production"
  expiration: 86400      # 24 hours
  refresh_expiration: 604800  # 7 days

# Prometheus Metrics
prometheus:
  enabled: true
  path: "/metrics"

# Alert Channels Configuration
channels:
  lark:
    enabled: true
    webhook_url: ""  # Fill your Lark webhook URL
  telegram:
    enabled: true
    bot_token: ""    # Fill your Telegram bot token
    chat_id: ""      # Fill your Telegram chat ID
  email:
    enabled: false
    smtp_host: "smtp.example.com"
    smtp_port: 587
    from_address: "alert@example.com"
  webhook:
    enabled: false
    url: ""          # Fill your webhook URL

# Logging
logging:
  level: "info"      # debug, info, warn, error
  format: "json"     # json, text
  output: "stdout"   # stdout, file
  filename: "logs/alert-center.log"
  max_size: 100      # MB
  max_age: 30        # days
  max_backups: 10
